ACTION=="remove", GOTO="bolt_end"

# start bolt service if we have a thunderbolt device connected
SUBSYSTEM=="thunderbolt", TAG+="systemd", ENV{SYSTEMD_WANTS}+="bolt.service"

LABEL="bolt_end"
